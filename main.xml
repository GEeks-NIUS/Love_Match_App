<?xml version="1.0" encoding="utf-8" ?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
	android:orientation="vertical"
	android:background="@drawable/background"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:textSize="40.0sp"
		android:typeface="serif"
		android:textStyle="italic"
		android:textColor="#B8FFAC"
		android:gravity="center"
		android:id="@+id/result"
	    android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="F.L.A.M.E.S."
		android:lines="7" />

	<TextView 
		android:textStyle="bold" 
		android:textColor="#ff99ffff" 
	    android:id="@+id/textv1"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=" " />
	<EditText
		android:textStyle="bold"
		android:textColor="#B8FFAC"
	    android:text="Your Crush's Full Name"
		android:gravity="center_horizontal"
		android:id="@+id/ycName"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView
		android:textStyle="bold"
		android:textColor="#ff99ffff"
	    android:id="@+id/textv2"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=" " />
	<EditText
		android:textStyle="bold"
		android:textColor="#B8FFAC"
		android:text="Your Nickname"
		android:gravity="center_horizontal"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:id="@+id/yName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="" android:lines="2" />
	<Button
		android:id="@+id/goBtn"
		android:background="#E67B74"
		android:textStyle="bold"
		android:textColor="#520C00"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:text="Love Match" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:lines="2" />
	<Button
		android:textSize="12.0sp"
		android:id="@+id/resetBtn"
		android:background="#E67B74"
	    android:textStyle="bold"
	    android:textColor="#520C00"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="100dp"
		android:layout_marginLeft="100dp"
		android:text="RESET" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:background="#751C00"
		android:textColor="#FFFFFF"
	    android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:layout_marginLeft="17dp"
		android:layout_marginRight="17dp"
	    android:textSize="12sp"
		android:layout_marginTop="100dp"
		android:text=" | F = Friends | L = Lovers | A = Attractive | M = Marriage | E = Enemies | S = Soulmates |"
		android:lines="1" />
	<TextView
		android:textSize="15.0sp"
		android:textStyle="bold"
		android:textColor="#2AF901"
		android:gravity="bottom"
		android:paddingLeft="20dp"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="This Love Match App is under development by Mark Anthony Diaz" />
</LinearLayout>
